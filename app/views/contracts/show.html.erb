		<h3><span>Contract Provisions</span></h3>
						<div class="content lesspadding">
							<% unless @contract.contract_provisions == "nil" %>
								<%=  @contract.contract_provisions.gsub('"', ' ') unless @contract.contract_provisions.blank? %>
							<% end %>
						</div>
					</div>
					<div class="widgetbox one_half last">
					<h3><span>Act Notes</span></h3>
						<div class="content lesspadding">
							<% unless  @contract.act_notes == "nil" %>
								<%= @contract.act_notes %>
							<% end %>
							
					
					</div>
						</div>
						<br clear="all">
	
					<div class="widgetbox">
		<h3><span>Additional Services Provided</span></h3>
		<div class="content lesspadding">
	<ul>
			<% @additional.each do |addi| %>
					<% if current_user.is? :everything %>
				<li><%= link_to "#{addi.act_booked} - #{addi.type_of_act} - #{addi.act_form}", addi %></li>
					<% else %>
					<li><%= addi.act_booked %> - <%= addi.type_of_act %> - <%= addi.act_form %></li>
					<% end %>
				<% end %></ul>
			</div>
			</div>
	
</div>
</div>
<br clear="all">
