<div class="invoicez last">
	<div class="invoice_inners">
	<div class="one_half">	
		<p><%= link_to "Printable Receipt (PDF)", contract_path(@contract, format: "pdf") %></p><br>
		<h2><%= @contract.act_booked %></h2>
		<h2><%= @contract.type_of_event %></h2>
		<h4><%= @contract.act_form %></h4>
		<%= @contract.location_name %><br>
	   	<%= "#{@contract.location_address_line_1}" %> <br> <%= "#{@contract.location_city} #{@contract.location_state} #{@contract.location_zip}" %><br>
									Phone:<%= @contract.location_phone %><br><br clear="all">
	</div>
	
	<div class="one_half_last">
	<h5 class="<%= @contract.status %> padding15 textindent">Contract Status:<%= @contract.contract_status %></h5>
	<h4 class="blue"> <b>Date of event: </b><%= @contract.date_of_event %>	</h4>
	<h4 class="blue"> <b>Event Time: </b><%= @contract.eventtime %>	</h4>
	<h4>Agent : <%= @contract.agent %> </h4>
	<h4 class="blue">Contract number: <%= @contract.contract_number %></h4>
	<h4 class="green">Pickup Amount: <%= @contract.pick_up_amount %></h4>
	<% unless cannot? :see_money, Contract %>
	<h4 class="green">Contract price: <%= @contract.contract_price %></h4>
	<h4 class="green">Contract Net: <%= @contract.act_net %></h4>
	<% end %>
	
	</div>
<br clear="all">

<% content_for :map do %>
<% unless @contract.location_name.blank? %>	
<div class="widgetbox">
<h3> <span>Event Location</span></h3>
	<div class="content">
				
				<%= @contract.location_name %><br>
				<%= "#{@contract.location_address_line_1}" %> <br> <%= "#{@contract.location_city} #{@contract.location_state} #{@contract.location_zip}" %><br>
				Phone: <%= @contract.location_phone %>	<br clear="all">	<br clear="all">
				<img src="http://maps.google.com/maps/api/staticmap?center=<%= themap %>&zoom=15&size=275x275&maptype=roadmap&sensor=true&markers=<%= themap %>" alt="Static Map for Events"></img>
       
	 	</div>
	</div>
	</div>
	<% end %>
	<% end %>
	<div class="widgetbox one_half">
		<h3><span>Contract Provisions</span></h3>
						<div class="content">
				<%=  @contract.contract_provisions.gsub('"', ' ') unless @contract.contract_provisions.blank? %>
					</div>
					</div>
					<div class="widgetbox one_half last">
					<h3><span>Act Notes</span></h3>
						<div class="content">
					<%= @contract.act_notes %>
					</div>
						</div>
						<br clear="all">
					<div class="widgetbox">
		<h3><span>Additional Services Provided</span></h3>
		<div class="content">
		<table cellpadding="0" cellspacing="0" class="sTable2" width="100%">
			<% @additional.each do |addi| %>
		<%#=current_user.actcode.inspect %>
				<tr>
					<% if  %>
					<td><%= link_to "#{addi.act_booked} - #{addi.type_of_act} - #{addi.act_form}", addi %></td>
					<% else %>
					  	<td><%= addi.act_booked %> - <%= addi.type_of_act %> - <%= addi.act_form %></td>
					<% end %>
					
			
				</tr>
			
				<% end %>	</table>
			<% #end %>
			</div>
			</div>
	
</div>
</div>


					