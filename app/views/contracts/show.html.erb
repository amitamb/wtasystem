<div id="quickdash">
	<% if can? :see_money, @contracts %>
<div id="money">
		<dt><b class="themoney">$<%= @contract.contract_price %></b><span>Contract price:</span>        </dt>
		<dt class="middle"><b class="themoney">$<%= @contract.act_net %></b><span>Contract Net:</span> 			</dt>
		<dt><b class="themoney">$<%= @contract.pick_up_amount %></b><span>Pickup Amount:</span> 		</dt>                    
	</div>
	<% end %>
	<div class="dash one_half">
			Dashboard
	</div>
	<div class="dash alignright one_half last">
	 <li><%#= image_tag("images/printer.png") %>
		<%= button_to "Printable Version (PDF)", contract_path(@contract, format: "pdf"),  :class => 'button button_green',:method => :get %> <%= button_to "Email Job Imformation", contract_path(@contract, format: "pdf"), :class => 'button button_blue',:method => :get %></li>
	</div>

		<br clear="all">
</div>

<div class="invoicez">
	<div class="invoice_inners">
		<div class="tan">
	<div class="one_half">	
		<h2><%= @contract.act_booked %></h2>
		<h2><%= @contract.type_of_event %></h2>
		<h4><%= @contract.act_form %></h4>
		<p class="address"><%= @contract.location_name %><br>
	   	<%= "#{@contract.location_address_line_1}" %> <br> <%= "#{@contract.location_city} #{@contract.location_state} #{@contract.location_zip}" %><br>
	Phone:<%= @contract.location_phone %></p><br><br clear="all">
	</div>
	
	<div class="one_half last">
	<h5 class="<%= @contract.status %> padding15 textindent">Contract Status:<%= @contract.contract_status %></h5>
	<h2 class="yesido"> <b>Date of event: </b><%= @contract.date_of_event.to_formatted_s(:eventdate) %>	</h2>
	<h2 class="yesido"> <b>Event Time: </b><%= @contract.eventtime %>	</h2>
	<h5>Agent : <%= @contract.agent %> </h4>
	<h5 class="blue">Contract number: <%= @contract.contract_number %></h5>
	<h5 class="green">Pickup Amount: $<%= @contract.pick_up_amount %></h5>
		<% if can? :see_money, @contracts %>
	<h4 class="green">Contract price: $<%= @contract.contract_price %></h4>
	<h4 class="green">Contract Net: $<%= @contract.act_net %></h4>
	<% end %>
	
	</div>
</div>

