<div id="calendar">
	<h2 id="month">
		<%= link_to "Today", :month => (Date.today).strftime("%Y-%m-%d") %>- 
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d") %>
  </h2>
	<%= calendar_for @contracts,:year => @date.year, :month => @date.month do |calendar| %>
	    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
	 <%= calendar.day(:day_method => :date_of_event) do |date, contracts| %>
	      <%= date.day %>
	<ul>
	 <% contracts.group_by(&:prntkey23).each do |pk, con| %>
	          <li class="groupby"><%#= pk %>  
	          
				<%= link_to con.map(&:act_booked).join(', '), "#{"contracts/"}" "#{con.map(&:id).join('')}" %>
	          </li>
	        <% end %>
	      </ul>
	    <% end %>
	  <% end %>
</div>
