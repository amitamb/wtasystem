<div class="form_defaultll">

<%= semantic_form_for(@user,:html => { :class => "form_default", :method => :put}, :as => @user) do |f| %>
<%= f.inputs :email %>
<%= f.inputs :first_name, :last_name, :phone_number %>
<% if can? :everything, @user %>
<%= f.inputs :actcode %>
<%= f.inputs :management %>
<% else %>
<p>Actcode : <%= @user.actcode.actcode %><br>
Management Company : <%= @user.management.name %></p>
<% end %>
<p>
<% if can? :assign_roles, @user %>
<h3>Privileges</h3> 
<% for role in User::ROLES %>
<%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
   <%=h role.humanize %>
<% end %>
<%= hidden_field_tag "user[roles][]", "" %>
<% end %>
<br></p>
<%#= f.input :current_password, :label => "You Must Enter Your Password To Update", :required => true %><br>
<%= f.commit_button :button_html => { :class => 'button button_green' } %>
</p>
<% end %>

</div>